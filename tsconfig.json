{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es2017",
        "outDir": "./build",
        "baseUrl": "./src",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "typeRoots": [
            "./@types",
            "./node_modules/@types"
        ]
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}